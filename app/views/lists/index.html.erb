<h1>Lists</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= link_to list.name, list %></td>
        <td><%= list.description %></td>
        <td><%= link_to "Delete", list, :method => :delete %>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "New List", new_list_path %></p>
