<!DOCTYPE html>
<html>
  <head>
    <title>TodoList</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <div id="flash">
        <% flash.each do |key, value| %>
          <div id="flash_<%= key %>"><%= value %></div>
        <% end -%>
      </div>
      
      <%= yield %>
    </div>
  </body>
</html>
